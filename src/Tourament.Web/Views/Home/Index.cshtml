

@{
    ViewData["Title"] = "Home Page";
}
<link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<div class="container">
    <br />
    @if (ViewBag.IsAdmin)
    {
        <input id="btnAddTournament" type="button" class="btn btn-primary float-left" value="Create Tournament"
               onclick="@("window.location.href='" + @Url.Action("Create", "Tournament") + "'");">
    }
    <br />
    <br />
    <div style="width:100%; margin:0 auto;">
        <table id="tournamentsDatatable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Tournament Name</th>
                    <th>Start Time</th>
                    <th>Minimum Players</th>
                    <th>Maximum Players</th>
                    <th>Waiting Players</th>
                    <th>Playing Players</th>
                    <th>Status</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts
{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/tournamentsDatatable.js"></script>
}

